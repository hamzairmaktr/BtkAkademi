@model IEnumerable<Candidate>
@{
    ViewData["Title"] = "Course Apply";
}

@if (Model.Count() > 0)
{
    <h6 class="display-6">Baþvurular(@Model.Count())</h6>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Ýsim</th>
                <th>Kayýt Tarihi</th>
                <th>Kurs</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.FullName</td>
                    <td>@item.ApplyAt</td>
                    <td>@item.SelectedCourse</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Henüz bir kurs baþvurusu olmadý <a asp-action="Apply" class="alert-link">kayýt.</a>
    </div>
}